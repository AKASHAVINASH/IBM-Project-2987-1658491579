#include <Servo.h>
Servo servo1;
float temp,light,gas,cm;

long readUltrasonicDistance(int triggerPin, int echoPin) {
  pinMode(triggerPin, OUTPUT);
  digitalWrite(triggerPin, LOW);
  delayMicroseconds(2);
  digitalWrite(triggerPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(triggerPin, LOW);
  pinMode(echoPin, INPUT);
  return pulseIn(echoPin, HIGH);
}

void setup() {
  pinMode(8, OUTPUT);
 
  pinMode(9, OUTPUT);
  pinMode(10, OUTPUT);	//brzęczek
  pinMode(A3, INPUT);	//czujnik gazu
  pinMode(A4, INPUT);	//czujnik światła
  pinMode(A5, INPUT); 	//czujnik temperatury  
  servo1.attach(12); 	//mikroservo
  Serial.begin(9600);
}

void loop() {
  temp = analogRead(A5);
  light = analogRead(A4);
  gas = analogRead(A3);
  cm = 0.01723 * readUltrasonicDistance(11,11);
  temperature(temp);
  lighting(light);
  gas_alarm(gas);
  door_opener(cm);
  Serial.println(light);
}

void temperature(float temp) {
  temp = (double)temp / 1024;       
  temp = temp * 5;                 
  temp = temp - 0.5;               
  temp = temp * 100;  
  	
  if (temp>30)
    digitalWrite(9, HIGH);
  else
    digitalWrite(9, LOW);
}

void lighting(float light) {
  if (light>550)
    digitalWrite(8, HIGH);
  else
    digitalWrite(8, LOW);
}

void gas_alarm(float gas) {
  if (gas>400)
    tone(10,1000,100);
}

void door_opener(float cm) {
  if (cm<100)
    servo1.write(90);
}


